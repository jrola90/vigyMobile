<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.jrola.java.android.vigym.vigymobile"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="pl.jrola.java.android.vigym.vigymobile.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pl.jrola.java.android.vigym.vigymobile.activities.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="pl.jrola.java.android.vigym.vigymobile.activities.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="pl.jrola.java.android.vigym.vigymobile.activities.ImportDataActivity"
            android:label="@string/title_activity_import_data"
            android:parentActivityName="pl.jrola.java.android.vigym.vigymobile.activities.AbstractVigymActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.jrola.java.android.vigym.vigymobile.activities.AbstractVigymActivity" />
        </activity>
        <activity android:name="ar.com.daidalos.afiledialog.FileChooserActivity" />
        <activity
            android:name="pl.jrola.java.android.vigym.vigymobile.activities.UserMainActivity"
            android:label="@string/title_activity_user_main" >
        </activity>
    </application>

</manifest>
